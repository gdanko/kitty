# https://sw.kovidgoyal.net/kitty/conf/

# Fonts
font_family      Noto Sans Mono
font_size        10.0
bold_font        auto
italic_font      auto
bold_italic_font auto

# Key Mappings
kitty_mod       ctrl+shift
map kitty_mod+k combine : clear_terminal reset active : send_key tab enter
map kitty_mod+r load_config_file

# Tab Bar
tab_bar_align       left
tab_bar_edge        top
tab_bar_style       powerline
tab_powerline_style angled

# Scrollback (Doesn't seem to work)
scrollback_fill_enlarged_window no
scrollback_lines                20000
scrollback_pager                less --chop-long-lines --RAW-CONTROL-CHARS +INPUT_LINE_NUMBER
scrollback_pager_history_size   0
scrollbar                       always
scrollbar_gap                   0.1
scrollbar_handle_opacity        0.5
scrollbar_hitbox_expansion      0.25
scrollbar_hover_width           1.5
scrollbar_interactive           yes
scrollbar_jump_on_click         yes
scrollbar_min_handle_height     1
scrollbar_track_hover_opacity   0.1
scrollbar_track_opacity         0
scrollbar_width                 1.5
touch_scroll_multiplier         1.0
wheel_scroll_min_lines          1
wheel_scroll_multiplier         5.0

# Terminal Bell
bell_on_tab          "ðŸ”” "
enable_audio_bell    no
# visual_bell_color    none
visual_bell_duration 0.2
window_alert_on_bell yes

# Window layout
draw_minimal_borders     no
initial_window_height    800
initial_window_width     1200
remember_window_position yes
remember_window_size     no
window_border_width      100px
window_padding_width     1

# OS-Specific
# wayland_titlebar_color system
linux_display_server   auto
wayland_enable_ime     yes

# Mouse
mouse_hide_wait 3.0

# BEGIN_KITTY_THEME
# Adwaita dark
include current-theme.conf
# END_KITTY_THEME